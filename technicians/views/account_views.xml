<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_form_inherit_gse_bonuses" model="ir.ui.view">
        <field name="name">account.move.form.gse.bonuses</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button type="object" name="action_view_bonuses" class="oe_stat_button" icon="fa-gift"
                       invisible="not bonuses_count" groups="account.group_account_manager">
                    <field name="bonuses_count" widget="statinfo" string="Transport Expenses"/>
                </button>
            </xpath>
        </field>
    </record>

</odoo>