<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_salary_calculation_wizard_form" model="ir.ui.view">
        <field name="name">salary.calculation.wizard.form</field>
        <field name="model">salary.calculation.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="net_salary"/>
                    <field name="tolerance_threshold"/>
                    <field name="struct_id"/>
                    <field name="basic_salary" readonly="1" attrs="{'invisible': [('basic_salary', '=', 0.0)]}" />
                </group>
                <section style="margin-top:1rem;">
                    <h5>Description</h5>
                    <p> 
                        The Basic Salary Seeker feature allows users to calculate the basic salary based on the net salary, selected salary structure, and other parameters.
                        after calcuting the basic salary, you can apply the basic salary to the contract.
                    </p>
                </section>
                <footer>
                    <button string="Calculate" type="object" class="oe_highlight" name="calculate_salary"/>
                    <button string="Appy Salary" type="object" class="oe_highlight" name="apply_basic_salary" attrs="{'invisible': [('basic_salary', '=', 0.0)]}"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
