<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
        <record id="hr_contract_view_form_custo" model="ir.ui.view">
            <field name="name">hr.contract.form.custo</field>
            <field name="model">hr.contract</field>
            <field name="inherit_id" ref='hr_contract.hr_contract_view_form'/>
            <field name="arch" type="xml">
                <xpath expr="//form//group[@name='salary_info']//group[@name='salary']" position="after">
                    <group>
                        <div></div>
                        <div class="o_row mw-50" name="basic">
                            <button
                                    name="open_salary_calculation_wizard"
                                    type="object" 
                                    string="Salary Seeker" 
                                    class="oe_highlight"
                                    style="width: 10%;" 
                            /> <br />
                        </div>
                    </group>
                </xpath> 
            </field>
        </record>
	</data>
</odoo>